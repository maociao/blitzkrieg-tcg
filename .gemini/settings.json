{
    "general": {
        "checkpointing": {
            "enabled": true
        }
    },
    "context": {
        "fileFiltering": {
            "respectGitIgnore": true,
            "enableRecursiveFileSearch": true
        }
    },
    "mcpServers": {
        "heroku": {
            "command": "npx",
            "args": [
                "-y",
                "@heroku/mcp-server"
            ],
            "env": {
                "HEROKU_API_KEY": "${HEROKU_API_KEY}"
            }
        },
        "cloud-run": {
            "command": "npx",
            "args": [
                "-y",
                "https://github.com/GoogleCloudPlatform/cloud-run-mcp"
            ]
        },
        "firebase-mcp-server": {
            "command": "npx",
            "args": [
                "-y",
                "firebase-tools@14.20.0",
                "mcp"
            ]
        },
        "playwright": {
            "command": "npx",
            "args": [
                "@playwright/mcp@latest"
            ]
        }
    },
    "security": {
        "auth": {
            "selectedType": "gemini-api-key"
        }
    },
    "ui": {
        "theme": "Default"
    }
}